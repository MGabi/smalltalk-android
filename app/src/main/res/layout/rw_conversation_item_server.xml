<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.example.smalltalkAndroid.utils.TypingTextView
        android:id="@+id/conversation_item"
        style="@style/MessageServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginEnd="42dp"
        android:fontFamily="@font/open_sans_light"
        android:includeFontPadding="false"
        android:maxEms="15"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Abc" />

    <ImageView
        android:id="@+id/conversation_tts"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:src="@drawable/ic_volume_up"
        android:tint="@color/chat_server"
        app:layout_constraintBottom_toBottomOf="@id/conversation_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/conversation_item"
        app:layout_constraintTop_toTopOf="@id/conversation_item"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>