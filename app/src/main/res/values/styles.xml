<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:transitionGroup">false</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">@dimen/text_more_medium</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="MessageClient">
        <item name="android:background">@drawable/msg_client</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MessageServer">
        <item name="android:background">@drawable/msg_server</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
